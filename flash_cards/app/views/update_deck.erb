<!-- UPDATE DECK FORM (include delete button) -->

<div class="deck-crud">
  <h2>Update Deck Name</h2>
  <form action="/deck/update/<%= @deck.id %>" method="post">

    <input type="text" name="deck_name" value="<%= @deck.name %>"></input>

    <button type="submit">Update Deck!</button>
  </form>
<div>

<div class="show-cards">
  <h3>All Current Cards</h3>
  <% @deck.cards.each do |card_obj| %>
  <table border="1" style="width:650px">
  <tr>
    <td id="c1"><%= card_obj.question %></td>
    <td id="c2"><%= card_obj.answer %></td>
    <td id="c3">
      <form method="post" action="/card/update/<%= @deck.id %>/<%= card_obj.id %>">
        <input type="submit" value="Edit">
      </form></td>
    <td id="c4">
      <form method="post" action="/card/delete/<%= @deck.id %>/<%= card_obj.id %>">
        <input type="submit" value="Delete">
      </form></td>
  </tr>
    <% end %>
  </table>
</div>
 <br><br>
<div class="delete-deck">
  <form method="post" action="/deck/delete/<%= @deck.id %>">
    <input type="hidden" name="_method" value="delete"/>
    <input type="submit" value="Delete Deck Forever">
  </form>
</div>
