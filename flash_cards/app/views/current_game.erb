<div class='container'>

  <h2>Question: <%= @card.question %></h2>
  <h4>Type your answer into each flashcard</h4>
  <form action='/current_game/<%= @round.id %>/<%= @card.id %>' method='post'>
    <input type="text" placeholder="What's the answer?" name="response" autofocus/>
    <button type='submit'>Next Card</button>
  </form>
  <div class="game-progress">
    <h4>Game Progress</h4>
    <p>The last question was <%= @last_question_status %></p>
    <p>You have answered <%= @num_correct %> cards (<%= @percent_correct %>%) correctly.</p>
    <p><%= @total_guesses %> of <%= @total_cards %> cards have been played.</p>
  </div>

</div>
